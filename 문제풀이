//한국 나이를 기준으로 사람들이 태어난 연도를 구하시오
let age = [20, 55, 36, 29, 13]
var result = [Int] ()
for i in age {
    result.append(2018 - i + 1)
}
print(result)

//만 19세 이하인 사람이 몇명인지 구하시오
var Count = [Int] ()
for i2 in age {
    if i2 <= 20 {
        Count.append(i2)
    }
}
print("\(Count.count)명")

//나이의 합 구하기
var sum:Int = 0
for i3 in age {
    sum += i3
}
print(sum)

//만 19세 초과인 사람의 나이를 더하시오
var sum2:Int = 0
for i4 in age {
    if i4 > 19 {
        sum2 += i4
    }
}
print(sum2)
